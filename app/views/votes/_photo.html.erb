<li class="votes__item-container rank1">

  <div class="votes__item-img_square">
    <div class="votes__item-img_container">
      <a class="votes__item-img_link js-modal-open" data-target="<%= "modal_photo_#{photo.id}" %>">
        <%= image_tag photo.image.url, class: 'votes__item-img_image' %>
      </a>
    </div>
  </div>

  <div class="votes__item-info_container">
    <div class="votes__item-info_rank"><%= '第' if photo.vote_rank == 1 %><%= photo.vote_rank %>位</div>
    <div class="votes__item-info_title">
      <a class="js-modal-open" data-target="<%= "modal_photo_#{photo.id}" %>"><%= photo.name %></a>
    </div>
    <div class="votes__item-info_points"><%= photo.vote_points %> pt</div>
  </div>

  <%= render 'shared/modal_photo', photo: photo %>

</li>
