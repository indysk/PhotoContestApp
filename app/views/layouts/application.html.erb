<!DOCTYPE html>
<html>
<%= render  "layouts/meta" %>
<body>
  <%= render  "layouts/header" %>
  <div class="app-container">

    <main class="app__main-flex_container <%= "aside_#{content_for?(:aside_type) ? yield(:aside_type) : 'none'}" %>">
      <div id="flash_container">
        <%= render  "layouts/flash_messages" %>
      </div>
      <%= yield %>
    </main>

    <aside class="app__aside-<%= content_for?(:aside_type) ? yield(:aside_type) : 'none' %>">
      <ul class="app__aside-container">
        <%= render  "layouts/aside" %>
      </ul>
    </aside>
  </div>
  <%= render  "layouts/footer" %>
</body>
</html>
