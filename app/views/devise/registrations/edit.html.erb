<h2>アカウントを編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<%= tag.div class: 'photoCreate__form-preview-imgcontainer', style: resource.image.attached? ? '' : 'display: none;' do %>
  <%= image_tag resource.image.attached? ? resource.image : '', class: 'photoCreate__form-preview-img', alt: 'プレビュー画像' %>
<% end %>
<div class="photoCreate__form-group photoCreate__form-preview-group">
  <%= f.label :image, 'プロフィール画像', class: 'photoCreate__form-label' %>
  <%= f.file_field :image, id: 'photoFileField', class:'photoCreate__form-input' %>
</div>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, autocomplete: "username" %>
</div>

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<div class="actions">
  <%= f.submit "アカウントを更新" %>
</div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy?
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
</p>

<%= link_to "Back", :back %>
