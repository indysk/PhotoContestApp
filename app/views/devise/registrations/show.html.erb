<% provide(:title, "プロフィール #{@user.name}") %>
<% provide(:aside_type, "none") %>
<% provide(:aside, "none") %>

<div class="user-container">
  <h1 class="user-title">ユーザ情報</h1>
  <div class="user__profile-container">
    <h3 class="user__profile-title">プロフィール</h3>
    <div class="user__profile-body">
      <%= image_tag @user.image.url, class: 'user__profile-img' %>
      <div class="user__profile-content">
        <div class="user__profile-name_container">
          <p class="user__profile-name"><%= @user.name %></p>
          <%= link_to  "プロフィールを変更", edit_user_registration_path, class: 'user__profile-name_link' %>
        </div>
        <p class="user__profile-howmany">応募した作品：<%= @photos.total_count %></p>
        <p class="user__profile-howmany">主催したコンテスト：<%= @contests.total_count %></p>
      </div>
    </div>
  </div>

  <div class="user__photos-container">
    <%= render 'tab' %>
  </div>

</div>
